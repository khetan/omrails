<h2>Change your password</h2>

<%= simple_form_for(resource, :as => resource_name, :url => password_path(resource_name), :html => { :method => :put, class: 'form-horizontal'}) do |f| %>
  <%= f.error_notification %>

  <%= f.hidden_field :reset_password_token %>

  

  <div><%= f.label :password, "New password" %>
  <%= f.password_field :password, :autofocus => true %></div><p>

  <div><%= f.label :password_confirmation, "Confirm new password" %><p>
  <%= f.password_field :password_confirmation %></div>

  <div><%= f.submit "Change my password", class: "btn primary-btn" %></div>
<% end %>

<%= render "devise/shared/links" %>
